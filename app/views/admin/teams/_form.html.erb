<%= simple_form_for [current_user, @team] do |f| %>

  <%= f.error_notification %>

  <br><br>


  <%= f.input :name, include_blank: false %><br><br>

  <%= f.collection_select :category_id, Category.all.order(:industry_name), :id, :industry_name, {include_blank: "Select from industries"} %>

  <br><br>

  <%= f.submit 'Create Team' %>

<% end %>
