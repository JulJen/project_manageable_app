<%= simple_form_for @user, url: signup_path  do |f| %>

  <%= f.error_notification %>
  <br><br>

  <%= f.input :name %><br>

  <%= f.input :email, input_html: { autocomplete: 'email' } %><br>

  <br>

  <%= f.input :password, input_html: { autocomplete: 'current-password' } %><br>

  <br><br>

  <%= f.submit 'Create Account' %>

<% end %>

<br><br>

<p>Existing user? <%= link_to "Sign In", signin_path %><p>
<p>Sign up with <%= link_to "Google Account", '/auth/google_oauth2' %><p>
