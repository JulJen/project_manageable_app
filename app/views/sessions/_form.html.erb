<% if @incomplete_message %>
  <p><%= @incomplete_message %></p>
<% end %>

<% if @failure_message %>
  <p><%= @failure_message %></p>
<% end %>


<%= form_for @user, url: signin_path, method: :post do |f| %>
  <%= f.label :username %>
  <%= f.collection_select(:username, User.all, :id, :username, prompt: "Select your username") %><br>
  <%= f.label :password, "password" %>
  <%= f.password_field :password %><br>
  <br><br>
  <%= f.submit "Sign In" %>
<% end %>

<br><br>

<p>New user? <%= link_to "Sign Up", new_user_path %><p>
