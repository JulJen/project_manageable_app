
<% if @success_message %>
  <p><%= @success_message %></p>
<% end %>

<% if @failure_message %>
  <p><%= @failure_message %></p>
<% end %>

<% if @incomplete_message %>
  <p><%= @incomplete_message %></p>
<% end %>

<div>
  <ul align="center">
    <% if @projects.length > 0 %>
      <h2>Current projects: <%= @projects.length %></h2>
      <ol>
        <% @projects.each do |p| %>
          <li>
          <%= link_to "#{p.name}", team_project_path(@team) %>
          </li>
        <% end %>
      </ol>
    <% elsif @projects.empty? %>
      <h1 align="center">Team: <%= @team.name %></h1>
      <p>You currently have <%= @projects.size %> projects.<p>
      <%= link_to "Create a project",  new_team_project_path(@team) %>

      <div style="width: 500px;margin:auto">
        <img style="width: 500px" src="https://images.pexels.com/photos/355952/pexels-photo-355952.jpeg?auto=compress&cs=tinysrgb&h=650&w=940">
      </div>
      <%= link_to "Delete Team", delete_team_path(current_user), method: :delete %>
    <% end %><br>
  </ul>
</div>
