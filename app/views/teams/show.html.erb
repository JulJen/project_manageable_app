<div>
  <div style="text-align: center;">
    <div style="display: inline-block; text-align: left;">

    <h1>Team: <%= @team.name %></h1>

      <% if @project_delete_message %>
        <p><%= @project_delete_message %></p>
      <% end %>

      <% if !@team.projects.empty? %>
        <h2>Your projects: <%= @team.projects.length %></h2>

        <% @team.projects.each do |project| %>
          <li>
          <%= link_to "#{project.name.capitalize}", project_path(project.id) %>
          </li>
        <% end %>
        <br><br>
      <% else%>
        <%= link_to "Create a project", new_team_project_path(@team.id) %>
      <% end %>

    </div>
  </div>
  <br>
  <div style="width: 500px;margin:auto">
    <img style="width: 500px" src="https://images.pexels.com/photos/355952/pexels-photo-355952.jpeg?auto=compress&cs=tinysrgb&h=650&w=940">
  </div>

</div>
