<div>
  <div style="text-align: center;">
    <div style="display: inline-block; text-align: left;">


      <h1>Team: <%= "#{@team.name.gsub(/"|\[|\]/, '').capitalize}" %></h1>
      <% if !@team.category_id.nil? %>
        <h4>Category: <%= @team.team_category %></h4>
      <% elsif @team.category_id.nil? && current_user.team_admin %>
        <%= link_to "Add category", edit_team_path(@team.id) %>
      <% end %>

      <% if !!@current_projects && @!!@team_admin %>
        <h2>Your projects: <%= @current_projects.length %></h2>

        <% @current_projects.each do |project| %>
          <li>
          <%= link_to "#{project.name.capitalize}", project_path(project.id) %>
          </li>
        <% end %>
      <% elsif !!@team_admin %>
        <h3 align="left">No projects yet. Need ideas?</h3>
        <h3 align="left"><%= link_to "Start project", new_team_project_path(@team) %></h3>
      <% else %>
        <h3 align="left">No projects yet. Suggest ideas to team admin.</h3>
      <% end %><br>


      <% if !!@current_members%>
        <h4>Team members: <%= @current_members.size %></h4>
        <% @current_members.each do |member| %>
          <% if member.user_id == %>
          <li>
            <%= link_to "#{member.member_name}", team_member_path(@team, member.id) %>
          </li>
        <% end %>
      <% else %>
        <p>No team members yet.</p>
      <% end %>

      <% if !!@team_admin %>
         <h4>Team admin:</h4>
         <% if @current_members.empty? %>
          <p><%= link_to "Invite a member", new_team_member_path(@team) %></p>
        <% else %>
          <p><%= link_to "Edit members",team_members_path(@team) %></p>
        <% end %>
      <% end %>



    </div>
  </div>

  <br>

  <div style="width: 500px;margin:auto">
    <img style="width: 500px" src="https://images.pexels.com/photos/355952/pexels-photo-355952.jpeg?auto=compress&cs=tinysrgb&h=650&w=940">
  </div>

</div>
