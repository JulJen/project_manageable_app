<%= form_for @team do |f| %>

  <% if @team.errors.any? %>
  <h2>There were some errors:</h2><
  <ul>
    <% @team.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
  <% end %>

  <%= f.label :name, "Team Name" %><br>
  <%= f.text_field :name %>

  <br><br>

  <%= f.submit 'Create Team' %>

<% end %>
