<%= simple_form_for [current_user, @team] do |f| %>

  <%= f.error_notification %>

  <br><br>


  <%= f.input :name, include_blank: false %><br><br>

  <%= f.collection_select :industry_id, Industry.all.order(:category), :id, :category, {include_blank: "Select from categories"} %>

  <br><br>

  <%= f.label :team_admin, "check box if you're the team admin" %>

  <%= f.check_box :team_admin, {}, true, false %>


  <br><br>

  <%= f.submit 'Create Team' %>

<% end %>
