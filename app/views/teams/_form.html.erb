<%= simple_form_for [current_user, @team] do |f| %>

  <%= f.error_notification %>

  <br><br>

  <%= f.label :name, "Team" %><br>
  <%= f.input :name %><br><br>

  <%= f.input :category %>

  <%= f.collection_select :category, Team.all.order(:category), :id, :category, {include_blank: "Select frome existing categories"} %>

  <br><br>

  <%= f.label :team_admin, "check box if you're the team admin" %>

  <%= f.check_box :team_admin, {}, true, false%>


  <br><br>

  <%= f.submit 'Create Team' %>

<% end %>
