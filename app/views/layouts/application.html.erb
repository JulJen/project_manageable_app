<!DOCTYPE html>
<html>
  <head>
    <title>ProjectManageableApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>
      <strong>Project Manageable</strong><br>
      <li><%= link_to "Dashboard", dashboard_path %></li>
      <li><%= link_to "#{current_user.name.capitalize}'s profile", profile_path %></li>
      <li><%= link_to "Teams", user_teams_path(current_user) %></li>
      <li><%= link_to "Projects", user_projects_path(current_user) %></li>
      <li><%= link_to "Log Out", logout_path, method: :delete %></li>
    <% end %>
    <br><br>
    <%= yield %>
  </body>
</html>
