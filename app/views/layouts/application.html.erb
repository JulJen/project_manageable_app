<!DOCTYPE html>
<html>
  <head>
    <title>ProjectManageableApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if @current_user %>
        <li><%= link_to "Dashboard", dashboard_path %></li>
        <li><%= link_to "Profile", profile_path %></li>
        <li><%= link_to "Teams", '/your_teams' %></li>
        <li><%= link_to "Projects", '/team_projects' %></li>
        <li><%= link_to "Log Out", logout_path, method: :delete %></li>
    <% else current_page?(root_path) %>
      <li><%= link_to 'Sign in via Google!', '/auth/google_oauth2' %></li>
      <li><%= link_to 'Sign Up', signup_path %></li>
      <li><%= link_to 'Sign In via App', signin_path %></li>
    <% end %>
    <br><br>
    <%= yield %>
  </body>
</html>
